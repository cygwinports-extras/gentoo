DESCRIPTION="Gentoo GTK+ file manager"
HOMEPAGE="http://www.obsession.se/gentoo/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

src_install() {
	cd ${B}
	cyginstall

	make_desktop_entry ${PN} "Gentoo File Manager" ${PN}.png "Utility;FileManager"

	cd ${S}
	doicon icons/${PN}.png
	dodoc CONFIG-CHANGES README.{NLS,gtkrc} docs/FAQ docs/scratch/*.txt

	docinto html
	dodoc docs/*.html docs/*.css

	cp -r docs/config docs/images ${D}/usr/share/doc/${P}/html/
}
